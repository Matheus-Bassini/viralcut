# ViralCut Pro - Configuração Apache para Hostinger
# Otimizado para dispositivos móveis, tablets e desktops

# Habilitar mod_rewrite
RewriteEngine On

# Forçar HTTPS (SSL)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remover www (opcional - ajuste conforme necessário)
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# ==========================================
# COMPRESSÃO GZIP - Otimização de Performance
# ==========================================
<IfModule mod_deflate.c>
    # Comprimir HTML, CSS, JavaScript, Text, XML e fontes
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
    AddOutputFilterByType DEFLATE application/x-font
    AddOutputFilterByType DEFLATE application/x-font-opentype
    AddOutputFilterByType DEFLATE application/x-font-otf
    AddOutputFilterByType DEFLATE application/x-font-truetype
    AddOutputFilterByType DEFLATE application/x-font-ttf
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE font/opentype
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE image/x-icon
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml

    # Remover browser bugs (apenas para browsers antigos)
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
    Header append Vary User-Agent
</IfModule>

# ==========================================
# CACHE - Otimização para Dispositivos Móveis
# ==========================================
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Imagens - Cache longo para melhor performance mobile
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS e JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Fontes
    ExpiresByType application/x-font-ttf "access plus 1 year"
    ExpiresByType font/opentype "access plus 1 year"
    ExpiresByType application/x-font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # Outros arquivos
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType application/x-shockwave-flash "access plus 1 month"
    
    # HTML - Cache curto para atualizações frequentes
    ExpiresByType text/html "access plus 1 hour"
    
    # Default
    ExpiresDefault "access plus 1 week"
</IfModule>

# ==========================================
# HEADERS DE SEGURANÇA
# ==========================================
<IfModule mod_headers.c>
    # Segurança básica
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # HTTPS Strict Transport Security (HSTS)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Content Security Policy - Otimizado para aplicação web
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://js.stripe.com https://www.google-analytics.com https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; img-src 'self' data: https: blob:; media-src 'self' blob: https:; connect-src 'self' https: wss: ws:; frame-src 'self' https://js.stripe.com; object-src 'none'; base-uri 'self';"
    
    # Permissions Policy (Feature Policy)
    Header always set Permissions-Policy "camera=(), microphone=(), geolocation=(), payment=(self)"
    
    # Cache Control para diferentes tipos de arquivo
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|webp|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>
</IfModule>

# ==========================================
# ROTEAMENTO PARA API NODE.JS
# ==========================================

# Proxy para API Node.js (ajuste a porta conforme configuração)
RewriteCond %{REQUEST_URI} ^/api/(.*)$
RewriteRule ^api/(.*)$ http://localhost:3000/api/$1 [P,L]

# Adicionar headers para proxy
<IfModule mod_headers.c>
    # Headers para requisições da API
    <LocationMatch "^/api/">
        Header set Access-Control-Allow-Origin "*"
        Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
        Header set Access-Control-Max-Age "86400"
    </LocationMatch>
</IfModule>

# Tratar requisições OPTIONS para CORS
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^api/(.*)$ - [R=200,L]

# ==========================================
# SPA (Single Page Application) ROUTING
# ==========================================

# Redirecionar todas as rotas não-API para index.html (React Router)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api/
RewriteCond %{REQUEST_URI} !^/uploads/
RewriteCond %{REQUEST_URI} !^/static/
RewriteRule . /index.html [L]

# ==========================================
# OTIMIZAÇÕES PARA DISPOSITIVOS MÓVEIS
# ==========================================

# Detectar dispositivos móveis e adicionar headers apropriados
<IfModule mod_headers.c>
    # Viewport meta tag para dispositivos móveis (caso não esteja no HTML)
    Header set X-UA-Compatible "IE=edge"
    
    # Preload de recursos críticos
    <FilesMatch "\.(html)$">
        Header add Link "</static/css/main.css>; rel=preload; as=style"
        Header add Link "</static/js/main.js>; rel=preload; as=script"
        Header add Link "<https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap>; rel=preload; as=style; crossorigin"
    </FilesMatch>
</IfModule>

# ==========================================
# PROTEÇÃO DE ARQUIVOS SENSÍVEIS
# ==========================================

# Bloquear acesso a arquivos de configuração
<Files ".env*">
    Order allow,deny
    Deny from all
</Files>

<Files "*.config.js">
    Order allow,deny
    Deny from all
</Files>

<Files "package*.json">
    Order allow,deny
    Deny from all
</Files>

<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

# Bloquear acesso a diretórios sensíveis
RedirectMatch 404 /\.git
RedirectMatch 404 /node_modules
RedirectMatch 404 /src

# ==========================================
# MIME TYPES - Suporte completo para PWA
# ==========================================
<IfModule mod_mime.c>
    # Fontes web
    AddType application/font-woff2 .woff2
    AddType application/font-woff .woff
    AddType application/vnd.ms-fontobject .eot
    AddType font/truetype .ttf
    AddType font/opentype .otf
    
    # Imagens modernas
    AddType image/webp .webp
    AddType image/avif .avif
    
    # Manifest PWA
    AddType application/manifest+json .webmanifest
    AddType application/json .json
    
    # Service Worker
    AddType application/javascript .js
    
    # Vídeo
    AddType video/mp4 .mp4
    AddType video/webm .webm
    AddType video/ogg .ogv
</IfModule>

# ==========================================
# OTIMIZAÇÃO DE LARGURA DE BANDA
# ==========================================

# Remover ETags (para melhor cache)
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Limitar tamanho de upload (ajuste conforme necessário)
<IfModule mod_php.c>
    php_value upload_max_filesize 500M
    php_value post_max_size 500M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# ==========================================
# REDIRECIONAMENTOS ESPECÍFICOS
# ==========================================

# Redirecionar URLs antigas (se houver)
# Redirect 301 /old-page /new-page

# Página de manutenção (descomente quando necessário)
# RewriteCond %{REQUEST_URI} !/maintenance.html$
# RewriteCond %{REMOTE_ADDR} !^123\.456\.789\.000
# RewriteRule $ /maintenance.html [R=302,L]

# ==========================================
# LOGS E MONITORAMENTO
# ==========================================

# Log de erros customizado (se suportado pela Hostinger)
# ErrorLog /home/usuario/logs/error.log
# CustomLog /home/usuario/logs/access.log combined

# ==========================================
# PERFORMANCE ADICIONAL
# ==========================================

# Desabilitar server signature
ServerSignature Off

# Limitar métodos HTTP
<LimitExcept GET POST PUT DELETE OPTIONS>
    Deny from all
</LimitExcept>

# Timeout para conexões lentas
<IfModule mod_reqtimeout.c>
    RequestReadTimeout header=20-40,MinRate=500 body=20,MinRate=500
</IfModule>
